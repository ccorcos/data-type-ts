{
	"name": "data-type-ts",
	"version": "0.0.8",
	"description": "Durable data types for TypeScript with runtime validators.",
	"main": "build/src/index.js",
	"scripts": {
		"build": "tsc",
		"watch": "tsc --watch",
		"test": "ava test/**/*.ts -v",
		"release": "rm -rf build && npm run build && npm version patch && npm publish"
	},
	"keywords": [
		"runtime",
		"schema",
		"jsonschema",
		"durable",
		"type",
		"validate",
		"validation",
		"validator",
		"datatype",
		"typescript"
	],
	"author": {
		"name": "Chet Corcos",
		"email": "ccorcos@gmail.com",
		"url": "https://www.chetcorcos.com"
	},
	"license": "MIT",
	"dependencies": {
		"fs-extra": "^11.1.1",
		"lodash": "^4.17.21",
		"prettier": "^3.0.3"
	},
	"devDependencies": {
		"@types/lodash": "^4.14.182",
		"@types/node": "^18.6.1",
		"ava": "^4.3.1",
		"tsx": "^3.14.0",
		"typescript": "^4.7.4"
	},
	"files": [
		"build/src/*"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ccorcos/data-type-ts"
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=tsx"
		]
	}
}